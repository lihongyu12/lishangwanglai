/* pages/A/A.wxss */
.clearfloat::after{
  display: block;
  content: '';
  clear: both;
}
.A{
  height: 1050rpx;
  position: relative;
  width: 100%;
}
.header{
font-size: 32rpx;
margin: 20rpx 0px;
}
.header>text{
  float: left;
  padding:20rpx;
  text-align: center; 
}
.search{
  float: right;
  width: 80%;
  position: relative;
  height: 81.6rpx;
  margin-right: 10rpx;
}
.search icon{
  position: absolute;
  left: 0px;
  top:0px;
  margin: 20rpx;
}
.search input{
  width: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
  text-indent: 2em;
  background-color: rgba(233, 233, 233, 0.329);
  padding: 10px;
  border-radius: 40rpx;
  box-sizing: border-box;
  height: 100%;
}
.aside-left{
  float: left;
  width: 24%;
  background-color: rgba(233, 233, 233, 0.329);
  text-align: center;
  height: 896rpx;
  position: relative;
}
.lists{
  box-sizing: border-box;
  padding: 20rpx 0px;
  z-index: 100;
  box-sizing:border-box;
  height:81.6rpx; 
}
.lists2{
  position: absolute;
  width: 100%;
  height: 81.6rpx;
  transition: all 0.3s;
  z-index: -10;
}
.aside-right{
  float: right;
  width: 74%;
  height: 896rpx;
  overflow-y: scroll;
}
.content{
  margin: 16rpx;
  margin-bottom: 0px;
  background-color: #ffffcc;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding:20rpx; 
  font-size: 28rpx;
  line-height: 2em;
}
.content2>view{
  padding: 20rpx;
  font-size: 30rpx;
}
.content2>view:nth-of-type(even){
  background-color: rgba(233, 233, 233, 0.329);
}
.imgbox{
  text-align: center;
}
.imgbox image{
  width: 200rpx;
  height: 200rpx;
  background-color: #000;
  border-radius: 10rpx;
  margin-top:16rpx;
}
.weight{
  color: #000;
  font-weight: 700;
}
.fnex,.liuy{
position: absolute;
font-size: 24rpx;
padding:8rpx 30rpx;
text-align: center;
right: 20rpx; 
border-radius: 20rpx;
background-color: #fff;
box-shadow: 0px 1px 5px #ddd;
}
.fnex{
  bottom: 30rpx;
}
.liuy{
  bottom: 100rpx;
}
.box{
  overflow: hidden;
    background: #faf5a4;
}
.box_an{
  height: 58rpx;
  font-size: 24rpx;
  white-space: nowrap;
  line-height: 58rpx;
  color: #797035;
  animation: ani 20s linear infinite;
}
@keyframes ani{
  0% {
    margin-left: 800rpx;
  }
  100% {
    margin-left: -1600rpx;
  }
}

